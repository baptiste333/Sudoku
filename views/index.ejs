	console.log(grid)
	for (var i = 0; i < 80; i++) {
		if (!grid[i].forget) {
			document.getElementById(i).innerHTML = grid[i].value;
			document.getElementById(i).classList.remove("unchecked");
		}
	}
	
	elements = document.getElementsByClassName("unchecked");
